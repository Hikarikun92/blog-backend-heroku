<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.14.0.xsd">
    <!-- Configure the database connection here -->
    <jdbc>
        <!-- Dummy configurations for generating the classes in a local setup; these settings should not match real,
        production settings -->
        <driver>com.mysql.cj.jdbc.Driver</driver>
        <url>jdbc:mysql://localhost:3306/blog_backend_heroku</url>
        <user>blog_backend_user</user>
        <password>blog123</password>
    </jdbc>

    <generator>
        <name>org.jooq.codegen.KotlinGenerator</name>
        <database>
            <name>org.jooq.meta.mysql.MySQLDatabase</name>
            <includes>.*</includes>
            <!-- Ignore Flyway tables -->
            <excludes>FLYWAY_SCHEMA_HISTORY</excludes>
            <inputSchema>blog_backend_heroku</inputSchema>
            <outputSchemaToDefault>true</outputSchemaToDefault>
        </database>
        <generate>
            <globalObjectReferences>false</globalObjectReferences>
            <javaTimeTypes>true</javaTimeTypes>
        </generate>
        <target>
            <packageName>br.hikarikun92.blogbackendheroku.persistence.jooq</packageName>
            <directory>src/main/kotlin</directory>
        </target>
    </generator>
</configuration>
